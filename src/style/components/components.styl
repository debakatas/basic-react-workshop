.book
    padding: 0 20px
    display: flex
    flex-direction: column

    &:hover
        .book__img > img
            top: 0

    &__img
        padding: 0 10px
        position: relative
        margin-bottom: 5px
        overflow: hidden

        >img
            position: relative
            top: 20%
            box-shadow: 3px 3px 4px color-green

        &::after
            content: ""
            display: block
            background: color-yellow
            width: 100%
            height: 30%
            position: absolute
            bottom: 0
            left: 0
            z-index: -1
            border-top-right-radius: 5px
            border-top-left-radius: 5px

    >button
        text-transform: uppercase
        padding: 5px
        border: 1px solid color-yellow
        background: color-green

        &:hover
            background: color-green-light
